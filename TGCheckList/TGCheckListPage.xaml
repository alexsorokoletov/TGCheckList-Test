<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:local="clr-namespace:TGCheckList" x:Class="TGCheckList.TGCheckListPage">
  <StackLayout Margin="24">
    <Label Text="Please rate your pizza!" FontSize="36" VerticalOptions="Center" HorizontalOptions="Center" />
    <Label Text="Enter pizza place:" Margin="5,10" HorizontalOptions="Center" />
    <Entry x:Name="place" Placeholder="place name..." Margin="5,10" HorizontalOptions="FillAndExpand" />
    <Label x:Name="ratingLabel" Text="Pizza rating: 5" Margin="5,10" HorizontalOptions="Center" />
    <Stepper x:Name="ratingStepper" Value="5" ValueChanged="Handle_ValueChanged" Minimum="1" Maximum="10" HorizontalOptions="Center" />
    <Button Text="Save rating" Clicked="Handle_Clicked" Margin="5,40" BorderColor="Red" TextColor="Orange" BorderWidth="1" HorizontalOptions="FillAndExpand" />
  </StackLayout>
</ContentPage>
